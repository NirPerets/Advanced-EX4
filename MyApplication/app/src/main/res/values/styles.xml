<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <!-- EditText Style -->
    <style name="EditTextStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">?attr/editTextTextColor</item>
        <item name="android:textColorHint">?attr/editTextHintColor</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">#D50000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>